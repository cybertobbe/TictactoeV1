<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!--New Branch - 2 images in fxml-->

<BorderPane prefHeight="700" prefWidth="642.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoetest.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>


    <top>

        <HBox alignment="BOTTOM_CENTER" spacing="50">
            <Label fx:id="playerPoints" style="-fx-font-weight: bold" text="Player points: " />
            <Label fx:id="moveCounter" text="Moves: " />
            <Label fx:id="computerPoints" style="-fx-font-weight: bold" text="ComputerPoints: " />

        </HBox>
    </top>

    <center>
        <VBox spacing="1">
            <HBox alignment="CENTER" spacing="50">
                <Label fx:id="winner" style="-fx-font-weight: bold; -fx-font-size: 20; -fx-text-fill: Green" />

            </HBox>
            <HBox alignment="CENTER" spacing="1">
                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

            </HBox>

            <HBox alignment="CENTER" spacing="1">
                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>
            </HBox>

            <HBox alignment="CENTER" spacing="1">
                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

                <ImageView image="${controller.gameModel.d}" fitHeight="200" fitWidth="200" pickOnBounds="true" preserveRatio="true" onMouseClicked="#clicked"/>

            </HBox>

        </VBox>

    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="resetGame" text="Reset"/>
            <Button fx:id="newGame" text="Play again" />
        </HBox>
    </bottom>


</BorderPane>
